<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Username"
            android:textColor="#E91E63"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_userinfo_username"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:editable="false"
            android:hint="username"
            android:padding="5dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Money"
            android:textColor="#E91E63"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_userinfo_money"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:editable="false"
            android:hint="money"
            android:padding="5dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Money update"
            android:textColor="#E91E63"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_userinfo_moneyupdate"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:editable="true"
            android:hint="type money"
            android:padding="5dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">
    <Button
        android:text="Draw Money"
        android:id="@+id/btn_drawmoney"
        android:layout_weight="1"
        android:background="#7986CB"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:textAllCaps="false"
        android:layout_height="fill_parent" />
        <Button
            android:textColor="#fff"
            android:text="Insert Money"
            android:id="@+id/btn_insertmoney"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="#7986CB"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        <Button
            android:id="@+id/btn_userinfo_saveinfo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#7986CB"
            android:text="Save Information"
            android:textAllCaps="false"
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="10"
        android:orientation="vertical">
        <LinearLayout
            android:weightSum="6"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10dp"
                android:gravity="center"
                android:text="Name"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="fill_parent" />
            <TextView
                android:textSize="10dp"
                android:gravity="center"
                android:text="Volume"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent" />
            <TextView
                android:textSize="10dp"
                android:gravity="center"
                android:text="Lai lo"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent" />
            <TextView
                android:textSize="10dp"
                android:gravity="center"
                android:text="Current Price"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent" />
            <TextView
                android:textSize="10dp"
                android:gravity="center"
                android:text="Average Price"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent" />
        </LinearLayout>
        <ListView
            android:layout_weight="9"
            android:id="@+id/list_info"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </ListView>

    </LinearLayout>


</LinearLayout>
